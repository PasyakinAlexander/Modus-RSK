include modal.pug

mixin IncludeCSS(filename)
    - let path = `assets/css/${filename}`
    link(rel="stylesheet", href=path)

mixin IncludeJS(filename)
    - let path = `assets/js/${filename}`
    script(src=path)

mixin InputRadio(name, label)
    label.radio= label
        input(type="radio" name=name)
        span.checkmark

mixin BtnMenu()
    button.btn__menu
        span

mixin BtnContactUs()
    button.btn-contact-us связаться с нами

mixin MaintenanceCarouselItem(imgPath)
    .carousel-item
        img(src= imgPath, alt="")

mixin PhotoWorkCard(imgPath, title, descr)
    .photo-work-card 
        img(src= imgPath, alt="")
        .descr
            h3= title 
            p= descr
            .btn Подробнее

mixin BreadCrumbs(page)
    .bread-crumbs 
        p Главная - 
            span= page